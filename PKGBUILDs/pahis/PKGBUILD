#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pahis
pkgdesc="Show pacman history."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=4

arch=('any')
license=('GPL')
depends=('bash' 'pacman')

source=(
    "$url/$pkgname"
    "$url/$pkgname.completion"
)
sha512sums=('838a9e02291f64b9b1fba78adbf439bbf3914b73fdecb6d2c4b2f1a4336684be116a563436865a0871759b9f29089176430d7071b72adcecaa6cc0cac0b40ccc'
            '109cd66ffff4d1f6a96edfa3a6d7b803f6c7cbe2ec8bf9224823b55e46b6ea68b0d4eb668dc2e54ada9761c27ec0cce1c857adc466447d892e61d1cf854b2970')

package() {
  cd $srcdir
  install -Dm755 $pkgname             $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.completion  $pkgdir/usr/share/bash-completion/completions/$pkgname
}
