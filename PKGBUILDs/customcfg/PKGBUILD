#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=customcfg
pkgdesc="Create /boot/grub/custom.cfg for grub. Renamed from antergos-customcfg."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.4
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('21d4a87f8336465cdffda0b3f2c643cca03d0dbe2e419611dd421895138fce4ea4324cd92b07d9f60d4a1fb5b9cd93f3537e7d9f646069bec4559e9f026bf39f')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
