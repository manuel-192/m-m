#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=customcfg
pkgdesc="Create /boot/grub/custom.cfg for grub. Renamed from antergos-customcfg."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.4.2
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('58c85c4ae3c89d5b6fb6be8c38bc3d58a280672826b1fa93d1d40cd320eda0932c7f9010fe6e1aef4b7242cddce3986a682d937568776e892808704425fb1ec4')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
