#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=customcfg
pkgdesc="Create /boot/grub/custom.cfg for grub. Renamed from antergos-customcfg."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.4.1
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('496db835d72f7baad395ed0bca847085c8a3c087f38eab3760e69730cc77077ff7503ee7448553d1d3083acef21715d2779d83b1b36bccc97c3bdba7394bcaaf')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
