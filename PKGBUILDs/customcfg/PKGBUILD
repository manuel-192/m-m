#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=customcfg
pkgdesc="Create /boot/grub/custom.cfg for grub. Renamed from antergos-customcfg."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.3
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('245379769f622c2e2bb31601fd6b5a5447d921c58b50744c7e7185870b83f3f729cf7bcb94e695e133883a12e11a24a3b114d0481e3f394205716a2af144d008')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
