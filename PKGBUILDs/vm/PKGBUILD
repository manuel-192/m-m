#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=vm
pkgdesc="Simple CLI interface to virt-manager & qemu."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.3.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash virt-install qemu virt-viewer xorg-xrandr yad)

source=(
#    "$url/${pkgname}"
    "$url/${pkgname}-gui"
    "$url/${pkgname}-gui.desktop"
)
sha512sums=('dab38cbda09720b71db25158408d1a11c4d592ae4d00a2a599ab243067486fcc363c24410a8a65b55ac78b032ba301b1371daf102f9875588e2c7bf35702f5b0'
            '06ef7007a8b2a24338daccb82c2cd0c07b886304a288d474e6f4e459916537142c6ec0e5c244afe3e95f6d90bd9e85c93391e6b91d0e97a13a3b9420c994b245')

package() {
#  install -Dm755 ${pkgname}              $pkgdir/usr/bin/${pkgname}
  install -Dm755 ${pkgname}-gui          $pkgdir/usr/bin/${pkgname}-gui
  install -Dm644 ${pkgname}-gui.desktop  $pkgdir/usr/share/applications/${pkgname}-gui.desktop
}
