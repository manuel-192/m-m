#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=vm
pkgdesc="Simple CLI interface to virt-manager & qemu."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash virt-manager qemu virt-viewer)

source=(
    "$url/$pkgname"
)
sha512sums=('d401a37085cdc6f3635485b5798d3d1756a4b176e3bfe2d9ec6923750e67e90b1ac64741b54b083ecc763ac7046d21819d4152e93b2828064eb6f8a2595bcac5')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
