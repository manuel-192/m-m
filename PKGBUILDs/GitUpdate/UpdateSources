#!/bin/bash
#
# Check that all source folders are up to date.

DIE() {
    echo "$progname: error: $1"
    exit 1
}

Pushd() { pushd "$@" >/dev/null || DIE "'pushd $*' failed." ; }
Popd()  { popd  "$@" >/dev/null || DIE "'popd $*' failed." ; }

_git_check1() {
    local folder="$1"

    if [ -n "$(/usr/bin/git fetch --dry-run 2>&1)" ] ; then
        read -p "    $folder: 'git pull' now (Y/n)? " >&2
        case "$REPLY" in
            ""|[yY]*) which logstuff >& /dev/null && logstuff on ; /usr/bin/git pull ;;
        esac
    else
        echo "    up to date: $folder"
    fi
}

_git_check2() {
    local folder="$1"

    printf "====> %-30s: " "$folder"
    git pull
}

Main()
{
    local progname="$(basename "$0")"
    local folder

    for folder in $(/usr/bin/ls -1) ; do
        [ -d $folder/.git ] || continue
        [ -L $folder/.git ] && continue
        [ -e $folder/.skip-auto-update ] && continue

        if [ -e $folder/.ask-auto-update ] ; then
            read -p "want to check folder '$folder' (y/N)? " >&2
            case "$REPLY" in
                [yY]*) ;;
                *) continue ;;
            esac
        fi

        Pushd "$PWD/$folder"   # (warning: $CDPATH may mix up!?)

        _git_check2 "$folder"

        Popd
    done
}

Main "$@"
