#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=GitUpdate
pkgdesc="Update special repo"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.5.4
pkgrel=1
arch=('any')
license=('custom')
depends=(bash git)

source=(
    $pkgname
    ArmPkgCheck
    StateCheck
    UpdatePackages
    UpdateSources
)
sha512sums=('436c51431521ceae967155956803973a9195a737038d4900be8a2595ce083dd45bc873cbb269df968f9dea332b3e9009c52c497d69e9e02da6d258226f51cd07'
            '072f026c8eefe932321d49b7d419a374b5127c30038f269f68d0e72fe39fbbf421c4e0de9a68fffc3578ff97dbef91060e9153f90ba0f6d37d521d496dd5dd07'
            'a29ea8698d86356b9ab8d30de933ce927090d94f6c4d720656e2c2d6a4c014611c1c141afb07c0ba63c8ec4db9d3f2b0d28cdf6e13ca8116f9c9400958f25aa4'
            'f8ef0fe79461b3f9cac4241b29e0570f8b3a06428f30cac3b13778006713b6132b517d2ad50814d291b82ec023e73c6011565a6af2fb41cf2aa237fb6d9fc09a'
            '764381edb1c5afc4e1131a28711607e90e51b3736379e17a5f59221f0450befcb535ac2cf837045fbcf2f8c893a14462993ffefd89bc6b790d16a58749489478')

package() {
    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
    install -Dm755 ArmPkgCheck      $pkgdir/usr/bin/ArmPkgCheck
    install -Dm755 StateCheck       $pkgdir/usr/bin/StateCheck

    install -Dm755 UpdatePackages   $pkgdir/etc/skel/UpdatePackages
    install -Dm755 UpdateSources    $pkgdir/etc/skel/UpdateSources
}
