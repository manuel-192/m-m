#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=GitUpdate
pkgdesc="Update special repo"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.4.1
pkgrel=1
arch=('any')
license=('custom')
depends=(bash git)

source=(
    $pkgname
    ArmPkgCheck
)
sha512sums=('85499908e53b8b9f0ffefe17a09cea06355f07ae1baa9f99206fc9bf1ac3a689aace5d3de515b8b22672214bb04422719502337d8c54021a61a8f255394bbf9d'
            '8fdbad23a6ab3412691c5143928f3396a6e80759dab78dc99a4452813503d5ffe612a27c91a18dd3731fad2a30a12296ab5ca9c37a168396ef0cd086ba629d9a')

package() {
    install -Dm755 $pkgname     $pkgdir/usr/bin/$pkgname
    install -Dm755 ArmPkgCheck  $pkgdir/usr/bin/ArmPkgCheck
}
