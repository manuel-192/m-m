depends=(bash git)

source=(
    $pkgname
    ArmPkgCheck
    StateCheck
    UpdatePackages
    UpdateSources
)
sha512sums=('90ea69038d93cf0d87e81e97f853a047c1454080389102999d6e363fdd85f942fc85a3f530fc7032fb045c060ca3d119f5c458ab693f5b426cc8d70022518138'
            '97c8203646aac0b54e049ee853f506eccdf9ad56d26f6a0b338735c145eba025c90db8cdd5f1cbe84290bdca9a52e1b0821e88ccd275f7907431affdb4391835'
            'a29ea8698d86356b9ab8d30de933ce927090d94f6c4d720656e2c2d6a4c014611c1c141afb07c0ba63c8ec4db9d3f2b0d28cdf6e13ca8116f9c9400958f25aa4'
            '7966cca41e4c848df2bbca4130d56f9dd4a12aef3e97ee581e24f157aa1dc44d908b1c6a722f667169bf8a15e5fbd1f1ba3164a8ed81d73f0766f3a46f817e4d'
            'b17703487e703fbf92439dd5da59f018e247540e9204745d97f58395b07025b1f223522344976450c34adb6c27478925f5152930eeffe1faac76d2c23f03791c')

package() {
    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
    install -Dm755 ArmPkgCheck      $pkgdir/usr/bin/ArmPkgCheck
    install -Dm755 StateCheck       $pkgdir/usr/bin/StateCheck

    install -Dm755 UpdatePackages   $pkgdir/usr/bin/UpdatePackages
    install -Dm755 UpdateSources    $pkgdir/usr/bin/UpdateSources
