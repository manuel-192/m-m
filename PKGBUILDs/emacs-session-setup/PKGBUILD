#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=emacs-session-setup
pkgdesc="Fix emacs session for x11 or wayland"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=1
arch=('any')
license=('GPL')

source=(
    $url/$pkgname
)
sha512sums=('6499d40edcd17d9e00237232baa5e21d1465c8d41f0bae31f47fb1e3f5e2fa57006109f036e4e7a680545310fa765590ef19f823832b29838a8a6d44c0b68c98')

package() {
    local src file
    for src in "${source[@]}" ; do
        file="${src##*/}"
        case "$file" in
            *)               install -Dm755 "$file" "$pkgdir/usr/bin/$file" ;;
        esac
    done
}
