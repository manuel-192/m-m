#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=m-common
pkgdesc="Some common apps and libs."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.1
pkgrel=2
arch=('any')
license=('GPL')

source=(
    $url/Color
    $url/glimpse-testing-updates
)
sha512sums=('317efbb580da2e05c2954fb6207b7e7c2469cb32ebd7446702281af2bcb67924a0b1a9c764cdf557fd0737843fa036cc128b5e6bccd4be20eb33fbdfa1dabad2'
            'f03187da2f8eb74e5957b4263037901ec8db0cd464e2ea11f5233c309244d898b00f5f6ec249bf3afc007c6dcaeade99dd68b8e123f992d724a301f85335aee8')

package() {
    #cd $srcdir

    for app in "${source[@]}" ; do
        install -Dm755 "${app##*/}" "$pkgdir/usr/bin/${app##*/}"
    done
}
