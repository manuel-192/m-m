#!/bin/bash

post_install() {
    local -r xml="/etc/skel/.config/xfce4/xfconf/xfce-perchannel-xml/xfce4-desktop.xml"
    local -r wall="/usr/share/endeavouros/backgrounds/endeavouros-wallpaper-dark.png"
    generate-xfce4-desktop-xml --detected --minimal --wall=${wall} ${xml}
}
post_upgrade() {
    post_install "$1"
}
