#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=suc
pkgdesc="Simple 'su -c' wrapper (understands spaces in command parameters)."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.2
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('75d0afc4dee8738691b3d1bc51d2c3362c17cbbc500dec72c1655c6057e18cd1355f87cee14c4c3b0e18f68c249a5d8d30ddfe23631acbacd38c6b0ef553f7c9')

package() {
  cd $srcdir
  install -Dm755 $pkgname   $pkgdir/usr/bin/$pkgname
}
