#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=stickburn
pkgdesc="GUI for burning ISO to USB stick with dd."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yad)

source=(
    $pkgname
    $pkgname.desktop
    find-usb-sticks
)
sha512sums=('2f85107829c07df26694413926745fd0585f4d73f5381bef2271d1869ae60506a627c272fb3068f4af39aa7c30dbae70949855e9209d2f2eea74a9ad4dc8dca0'
            '48c58caebd055f669a63af27413307a329a49fc4c7ddc627a208c90293fc016136a4d86524469f7c605e8194a15ce12d3dd212db7e504948f5be4bfb2f63b507'
            'f1b7e23e16df16c375142e3de187a8bffe724b0fd70e133c521d11a83ee021fbba211cac071a4418884b3a0c65ba9df66093c5e6106209ced64c90fe8e7c26bd')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm755 find-usb-sticks  $pkgdir/usr/bin/find-usb-sticks
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
