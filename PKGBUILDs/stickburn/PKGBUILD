#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=stickburn
pkgdesc="GUI for burning ISO to USB stick with dd."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=20
pkgrel=1.1
arch=('any')
license=('GPL')
depends=(bash yad burn2dev)

source=(
    $pkgname
    $pkgname.desktop
)
sha512sums=('d9c4f7c92463c7b0cd2b05b39a611c7ff071c0c629e510f94d35b18efcba1a80eb321e4b0383b02c682418d5ec69f8859d5d44a14ddae77eab6320a6339f899e'
            '02c2027ff3f187cd988220f01e2fbba5398dece1528529090a39014fe8a956f89ef2deb05475c4f7040dbf6adf248afc9b6915a38c664fd7da558e57886719f7')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
