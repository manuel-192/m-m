#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=stickburn
pkgdesc="GUI for burning ISO to USB stick with dd."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.1.3
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yad)

source=(
    $pkgname
    $pkgname.desktop
    find-usb-sticks
)
sha512sums=('0269373accfcd9ea3c27d08a879a14f27b72a892db1040b9040113c2bcaa3b93b265c4bbad97c1e616f33b600a5e534a7ea7cc4e5838c25b8372ef107c62a7fb'
            '2823d3a1bf43036de1f66eeb6827f00b4c5b8177177c961f016ec7679ef1f166653c1a0e67ebf9a5fd4237220c0f44e7ced45fefbb8c4f71355e2e1dfdb5e61d'
            'f1b7e23e16df16c375142e3de187a8bffe724b0fd70e133c521d11a83ee021fbba211cac071a4418884b3a0c65ba9df66093c5e6106209ced64c90fe8e7c26bd')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm755 find-usb-sticks  $pkgdir/usr/bin/find-usb-sticks
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
