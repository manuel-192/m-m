#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=metamgr
pkgdesc="Meta package manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.3
pkgrel=1
arch=('any')
license=('GPL')
depends=(yay)

source=(
    $url/$pkgname
)
sha512sums=('599db37c524c5d5b5fb537527a5537d6c62850dc685472c30437bb537839749655ddf64b1bdedda53030e8c06ee89431bc98d23776798875bfe96758c009049c')

package() {
    sed -i $pkgname \
        -e "s| local version_suffix=.*$| local version_suffix=$pkgver.$pkgrel|"

    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
