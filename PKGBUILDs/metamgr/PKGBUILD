#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=metamgr
pkgdesc="Meta package manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(yay)

source=(
    $url/$pkgname
)
sha512sums=('7427bcfe24759f7172dda495983e909420c59f7a7701b70efbc0f8a6bc2c994f509d26aeb41d91a8f1f1740dc8802ed2c14e1d782967548e11113a96023c4856')

package() {
    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
