#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=metamgr
pkgdesc="Meta package manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.4
pkgrel=1
arch=('any')
license=('GPL')
depends=(yay)

source=(
    $url/$pkgname
)
sha512sums=('84738be3621d9aaa9077a34e10f8104e3812fdeea69c80638dc3418f2de31497be25cd8abc2102c16af60ab57aa1fb3ba1b955d38fc0e03b3248d0d46e5bb0e8')

package() {
    sed -i $pkgname \
        -e "s| local version_suffix=.*$| local version_suffix=$pkgver.$pkgrel|"

    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
