#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=metamgr
pkgdesc="Meta package manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(yay)

source=(
    $url/$pkgname
)
sha512sums=('681996b4a455e01e9ca2691365e5432f9614cd50bb9f4a52bf26f49ec72c384461d6f06dad4eb33f3749f82dce98956b1dd8ce96413d576a4acac0b9420247e0')

package() {
    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
