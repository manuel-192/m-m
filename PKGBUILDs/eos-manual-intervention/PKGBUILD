#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=eos-manual-intervention
pkgdesc="Manual interventions manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=1.1
arch=('any')
license=('GPL')

source=(
    $url/$pkgname
    $url/$pkgname.interventions
)
sha512sums=('94c0d36b9b822422fa2d19347c494ec83bb7a365ff4fb790e4416bfc7afcece1532ca0f48bd784c09ea92efa3438931092194a937f777a84d42f75d83bc2709c'
            'fa53e4fa0c86bca87b6bf5d63194e3e4722796cfafe25b10841e9f3bfe2836bb6be615fbdc55b79111dd020b83a686505f6cccef049f3659e91b207f23d4b23d')

package() {
    local src file
    for src in "${source[@]}" ; do
        file="${src##*/}"
        case "$file" in
            *.interventions) install -Dm644 "$file" "$pkgdir/etc/$pkgname/$file" ;;
            *)               install -Dm755 "$file" "$pkgdir/usr/bin/$file" ;;
        esac
    done
}
