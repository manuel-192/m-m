#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=eos-manual-intervention
pkgdesc="Manual interventions manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=1.1
arch=('any')
license=('GPL')

source=(
    $url/$pkgname
    $url/$pkgname.interventions
)
sha512sums=('7e85d65e54f4589f24ce57454a0af81bb75f46b5f8ff571e8070f136d0cc14b33578cd29343d8ecca008183cc292247a7d4abffb5919171235d3e28510a60a86'
            '4d16ee8ec3b35c68f71cb3ddeabbe082acdd780f273335de57c1598d317cb8faf343291ac719b9407c6accd7ec2f52fbc1becca9a24b10c450c9d154cdacef33')

package() {
    local src file
    for src in "${source[@]}" ; do
        file="${src##*/}"
        case "$file" in
            *.interventions) install -Dm644 "$file" "$pkgdir/etc/$pkgname/$file" ;;
            *)               install -Dm755 "$file" "$pkgdir/usr/bin/$file" ;;
        esac
    done
}
