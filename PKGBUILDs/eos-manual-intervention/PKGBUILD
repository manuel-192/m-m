#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=eos-manual-intervention
pkgdesc="Manual interventions manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=1.1
arch=('any')
license=('GPL')

source=(
    $url/$pkgname
    $url/$pkgname.interventions
)
sha512sums=('97e23edff68293d34db4a3e7e27b434d4ea2e7d01959a67e91d528d2347e276ed97a23afd079e5ff3e2ddd3458163df9bbbce76a6d19c09f4d6cbb2cdc009412'
            '4d16ee8ec3b35c68f71cb3ddeabbe082acdd780f273335de57c1598d317cb8faf343291ac719b9407c6accd7ec2f52fbc1becca9a24b10c450c9d154cdacef33')

package() {
    local src file
    for src in "${source[@]}" ; do
        file="${src##*/}"
        case "$file" in
            *.interventions) install -Dm644 "$file" "$pkgdir/etc/$pkgname/$file" ;;
            *)               install -Dm755 "$file" "$pkgdir/usr/bin/$file" ;;
        esac
    done
}
