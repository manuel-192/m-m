#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=eos-manual-intervention
pkgdesc="Manual interventions manager."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=1.1
arch=('any')
license=('GPL')

source=(
    $url/$pkgname
    $url/$pkgname.interventions
)
sha512sums=('e5d7466281e99712fc8907056e7c077188ade867088042942e82045a94ae83669e2b40c606d8deeccb85a96cbbc786ff7ccf8ef4937a3a893e3232a8ac9b351f'
            '0fef446baaeb47273289dee93a4d0d03deb8229adb5a3d6e3a2abb67ce584e1e41f4fa4ea69c1a631c75b099e610c3a0ca5b864f870afca824ca1452b63be711')

package() {
    local src file
    for src in "${source[@]}" ; do
        file="${src##*/}"
        case "$file" in
            *.interventions) install -Dm644 "$file" "$pkgdir/etc/$pkgname/$file" ;;
            *)               install -Dm755 "$file" "$pkgdir/usr/bin/$file" ;;
        esac
    done
}
