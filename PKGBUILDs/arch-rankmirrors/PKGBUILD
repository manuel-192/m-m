#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-rankmirrors
pkgdesc="Rank Arch mirrors, prefers up-to-date mirrors"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=10

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
    $url/long-time-rank-arch
)
sha512sums=('0ca143d3dfe850a5058596e49bd7f2bdf621c2bc168be4f0b3362442d7f37a2e139685a65e6abe273b5f1eafa624be4948ae1d069a2f5883d583c17595c0d554'
            'bf7ee16973d0dfa7bc80e96d38a56187d7787dee483bf60ba67c787e80774fc2a2ba757e52af5273f0ba34d708d967122264cc4943b563cd988622b0fdddb4a3')

package() {
    local src

    for src in "${source[@]}" ; do
        src="$(basename "$src")"
        case "$src" in
            *)  install -Dm755 $src                    $pkgdir/usr/bin/$src ;;
        esac
    done
}
