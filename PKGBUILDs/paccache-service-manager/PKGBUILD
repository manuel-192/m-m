#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=paccache-service-manager
pkgdesc="Simple manager for the paccache systemd service."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=2

arch=('any')
license=('GPL')
depends=(bash pacman-contrib polkit)

source=(
    "$url/$pkgname"
)
sha512sums=('df4c176ffe59e3c8157c8053b32564a262af8c812c447d536ac87abb4bd61abcf65960fbfd34104fa39ae81246f6758e48cd0b7dd044cdc11d8c09f943224d24')

package() {
  cd $srcdir
  install -Dm755 $pkgname             $pkgdir/usr/bin/$pkgname
}
