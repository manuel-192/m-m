#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=ncd
pkgdesc="Another cd augmenter."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=0.1.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url/ncd-helper.bash"
)
sha512sums=('e6b2239b4598d93e6c4894cc82950010838578472a58a259745485b8868a42e73769a5acbace5394bf6f2fc13e45fa13eb999ddc09797ad879f3331d2e7aa653')

package() {
    install -Dm644 ncd-helper.bash         $pkgdir/etc/skel/ncd-helper.bash
}
