#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=ncd
pkgdesc="Another cd augmenter."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=0.2
pkgrel=2
arch=('any')
license=('GPL')
depends=(bash)

source=(
    $url/ncd-helper.bash
    $url/ncd-install
)
sha512sums=('e44252aad06eaf7c02d749bb18257cfa91287483bfb209c2538136ca9c5a84dbc49bdee33abfbb5f1d13d5c67cedeb603b47906894451bef66559aae9821c496'
            'bf2a00de0c2615ff05da2a789d553e5ea2a8fcf184b196f23f2f694180309b53a996e9cfd5775b8fd69a8bc770757907425d00824bf1d4147273874ba65e6ff7')

package() {
    install -Dm644 ncd-helper.bash         $pkgdir/etc/skel/ncd-helper.bash
    install -Dm755 ncd-install             $pkgdir/usr/bin/ncd-install
}
