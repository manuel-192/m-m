#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=ncd
pkgdesc="Another cd augmenter."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=0.1.2
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url/ncd-helper.bash"
)
sha512sums=('d0dafe4f3cd31599e4b3f1bc1386eab553acd460cc096af46a0e960415cb1e9ed63c4744d7a5fa067951cf937d0952d054116bf6697a5ab3242a7991ae3aa064')

package() {
    install -Dm644 ncd-helper.bash         $pkgdir/etc/skel/ncd-helper.bash
}
