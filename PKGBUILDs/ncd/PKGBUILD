#!/bin/bash
# Maintainer: manuel at forum.endeavouros.com

pkgname=ncd
pkgdesc="Another cd augmenter."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=0.1.3
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url/ncd-helper.bash"
)
sha512sums=('3af0403eb76f8b94511937181c89b319d427c169bb7acd5e833b9ec823281089f4e872a8dc2db3a20b316184622daaeb1469726cbbf8ab7c645c7d1d17502fa5')

package() {
    install -Dm644 ncd-helper.bash         $pkgdir/etc/skel/ncd-helper.bash
}
