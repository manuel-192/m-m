#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=md
pkgdesc="Markdown editor using Visual Studio Code"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1
pkgrel=1

arch=('any')
license=('GPL')
optdepends=(
    'code: Visual Studio Code'
    'vscodium-bin: Visual Studio Code, without MS branding'
)

source=(
    $url/md
    $url/md.completion
)
sha256sums=('a96d93d39d7f3a0314fe9efabfb460420334189c4ad6d1c79cd53c192b534ef3'
            '7aa5ce194b6d529b7a6f125b3d1e9f39364c77cda004e51529c0a13d5e802012')

package() {
    install -Dm755 $pkgname               $pkgdir/usr/bin/$pkgname
    install -Dm644 $pkgname.completion    $pkgdir/usr/share/bash-completion/completions/$pkgname
}
