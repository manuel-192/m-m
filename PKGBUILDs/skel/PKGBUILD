#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=4

arch=(any)
license=(GPL)
depends=()

source=(
    $url/eos.bashrc
)
sha512sums=('146d2384be279481c0127725620b57242f049efa9a2839fdc253d8a39a8dcc768ce33cc1bb8bf052e0eaef15f6c2ec2e1932482ae01c5d903fe3d545974de4d8')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            eos.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
