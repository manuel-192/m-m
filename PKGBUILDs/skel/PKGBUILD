#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=11

arch=(any)
license=(GPL)
depends=()
backup=(etc/skel/m.bashrc)

source=(
    $url/m.bashrc
)
sha512sums=('a5f665f2113e8e412d3a7463e1f32800faed89d22ce1acf6c2b9974519f0799ff982adb6f352187fcc6dfcdc075538baa0d9940f7dc8aed3e9910eb3f24b41f3')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            m.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
