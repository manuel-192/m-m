#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=3

arch=(any)
license=(GPL)
depends=()

source=(
    $url/eos.bashrc
)
sha512sums=('2e4a5e32a9d83d1c220864b4e7400bfbe9c74108aebd04f7029211f11ab7069d27587a62203e6416fc10011397e477564a0a278236009bf97c8b5b0aaa3c7d6c')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            eos.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
