#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=12

arch=(any)
license=(GPL)
depends=()
backup=(etc/skel/m.bashrc)

source=(
    $url/m.bashrc
)
sha512sums=('274971febf25830057bdc2765f26aced98712bbe0e6955bef971e94ba7f5fade68eca33ed70838f283fb3ad864dbe2369180c53ef04403a27418c15625528e75')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            m.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
