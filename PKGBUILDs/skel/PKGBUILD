#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=10

arch=(any)
license=(GPL)
depends=()
backup=(etc/skel/m.bashrc)

source=(
    $url/m.bashrc
)
sha512sums=('8c4abec068a3675c6e3aef5a454b7c131a8c89a8740c5d958e3e8ad69ac15fed33b09e9e02c461d1f066f83a193d5f0e87d1be41553ce86bf988d1421eaeaea9')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            m.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
