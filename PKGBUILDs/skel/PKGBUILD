#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=12.1

arch=(any)
license=(GPL)
depends=()
backup=(etc/skel/m.bashrc)

source=(
    $url/m.bashrc
)
sha512sums=('381e77fd61cd31abb4c01977db44614520c9c0c6ce39052357f8e60a8001dbb6af2bf1fe9846e627b42361316e5a5271c1323d2b1ae30db9a45502c07ed934ea')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            m.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
