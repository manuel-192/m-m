#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=8

arch=(any)
license=(GPL)
depends=()
backup=(etc/skel/m.bashrc)

source=(
    $url/m.bashrc
)
sha512sums=('08b3c759732b25af78748f741ed34dffc5a572533afe55d372634f2367054e34fea16c77989facfb7cc820f62ee3f386216eea2d3de34b81c5d266390477b9bc')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            m.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
