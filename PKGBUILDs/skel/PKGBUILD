#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=5

arch=(any)
license=(GPL)
depends=()

source=(
    $url/eos.bashrc
)
sha512sums=('9a4d55c985d48c571f4b536386dd3d56d3f1f1e04f4e988f89f0cafa17170da4c4691a39afbf1ec1262584f7d84ee9f6da83ac299c015c30cf4d3b9edd63b001')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            eos.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
