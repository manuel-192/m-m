#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=skel
pkgdesc="/etc/skel files"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=2

arch=(any)
license=(GPL)
depends=()

source=(
    $url/eos.bashrc
)
sha512sums=('ac1221c5dd29b1cad1662a9a8b4b25d9d2250f2bdd1f2ee68984d786f7992b5a753fae28fcad3ca32c1878f140a5cbb1ea93c1f9a7752ff989eb50c625b66508')

package() {
    local item src

    for src in "${source[@]}" ; do
        item="${src##*/}"
        case "$item" in
            eos.*)         install -Dm644 "$item"  "$pkgdir/etc/skel/$item" ;;
        esac
    done
}
