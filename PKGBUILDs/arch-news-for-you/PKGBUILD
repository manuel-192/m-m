#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-news-for-you
pkgdesc="Show latest Arch news only if they affect your machine."
url="https://github.com/manuel-192/m-m/raw/master/Source/$pkgname"
pkgver=0.1.4
pkgrel=1

arch=('any')
license=('GPL')
depends=(bash xdg-utils)

source=(
    "$url/$pkgname"
)
sha512sums=(
    36ccd801f6ae21b26b8f6f7fec352e95f16e49bcbc9d1aa59258d96535521526454af570991d0dfd4c905718f1777a9d01e8b745ab5911ea491595a4d9ec869d
)

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
