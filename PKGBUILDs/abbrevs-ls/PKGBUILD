pkgname=abbrevs-ls
pkgdesc="Various short commands related to ls"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=22.9
pkgrel=4

arch=('any')
license=('GPL')

source=(
    $url/l
    $url/ll
    $url/lt
)
sha512sums=('c6cf05ae65b2886b9fc6c7412f62521bfcad4f0c48dabcc7e8b07c1173e81cdeb4777e44f4e88b8d0c63ef9f029a37dcb983267f38d815032190ae45843a3551'
            'fc6ea604d9e552c96c475c297ae3f3639fa91f4c740c9aea43abe02a0e3009d9cd5e50b4ff6e5fec1693749082aff4a01b1663751367a7557d4191991d8deb6d'
            '067c2f51f2df8e56297d6294124b2460b27c263caff24ce58855913c0f0a2d8caa6c4369e50448731632406081ec55ed75251492e7550878ce32957ce8af41cb')

package() {
    local xx
    for xx in l ll lt
    do
        install -Dm755 $xx               $pkgdir/usr/local/bin/$xx
    done
}
