#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=abbrevs-ls
pkgdesc="Various short commands related to ls"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=22.9
pkgrel=2

arch=('any')
license=('GPL')

source=(
    $url/l
    $url/ll
#    $url/ls
)
sha512sums=('c6cf05ae65b2886b9fc6c7412f62521bfcad4f0c48dabcc7e8b07c1173e81cdeb4777e44f4e88b8d0c63ef9f029a37dcb983267f38d815032190ae45843a3551'
            '4a63ad8e485c8418a8db9e8c905893ef60edb12aa49f056894490c9cee12b8b889faf7eb4f412083df53b4dc353b361f7a01429b5220df92f73bf5666242ad47')

package() {
    local xx
    for xx in l ll # ls
    do
        install -Dm755 $xx               $pkgdir/usr/local/bin/$xx
    done
}
