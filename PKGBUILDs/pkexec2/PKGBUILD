#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkexec2
pkgdesc='pkexec wrapper, retaining the current working directory instead of changing it to /root'
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.2
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash' 'polkit')

source=(
    "$url/$pkgname"
)
sha512sums=('dd82fba8b5dd1becc7745b0594ef92455d1ad2909878cd8f27c884625aae9b3d094cf825c2c7453980628dad4b6e0ea6c5d5e68af735e41dc362b88c0434e480')

package() {
    cd $srcdir
    install -Dm755 $pkgname    $pkgdir/usr/bin/$pkgname
}
