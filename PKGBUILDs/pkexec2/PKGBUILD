#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkexec2
pkgdesc='pkexec wrapper, retaining the current working directory instead of changing it to /root'
url="https://github.com/manuel-192/m-m/raw/master/Source/$pkgname"
pkgver=0.1.15
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash' 'polkit')

package() {
    local helper=cmdindir

    cd $srcdir

    echo "#!/bin/bash"                    >  $pkgname
    echo 'pkexec '"$helper"' "$PWD" "$@"' >> $pkgname

    echo "#!/bin/bash"                    >  $helper
    echo 'cd "$1" ; shift ; "$@"'         >> $helper

    install -Dm755 $pkgname    $pkgdir/usr/bin/$pkgname
    install -Dm755 $helper     $pkgdir/usr/bin/$helper
}
