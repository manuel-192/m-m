#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkexec2
pkgdesc='pkexec wrapper, retaining the current working directory instead of changing it to /root'
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.3
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash' 'polkit')

source=(
    "$url/$pkgname"
)
sha512sums=('d4174cb84a58232c7a8b66709ce7886e038c3974e8d1c0c2d7eaf9103ee7ada7b7512a8ba219f248649f644dc9c2177aa466b51ca7df47f558a98349c7c5993a')

package() {
    cd $srcdir
    install -Dm755 $pkgname    $pkgdir/usr/bin/$pkgname
}
