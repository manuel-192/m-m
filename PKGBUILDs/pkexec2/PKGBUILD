#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkexec2
pkgdesc='pkexec wrapper, retaining the current working directory instead of changing it to /root'
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.2
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash' 'polkit')

source=(
    "$url/$pkgname"
)
sha512sums=(
    5771821fbad322b4a2d543fe17542bee2d5584e941ad4d5c7fb96944e48c4d64a087090f9e89c7be4c2b2253aab011a77e9777664080eb6d6b83f9e2c9d2eb3c
)

package() {
    cd $srcdir
    install -Dm755 $pkgname    $pkgdir/usr/bin/$pkgname
}
