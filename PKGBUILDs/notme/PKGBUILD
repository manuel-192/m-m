#!/bin/bash
# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=notme
pkgdesc="EndeavourOS news notification tool."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1
pkgrel=1
arch=('any')
license=('GPL')
depends=(
    bash
)

source=(
    "$url/$pkgname"
    "$url/$pkgname.timer"
    "$url/$pkgname.service"
    "$url/README.md"
)
sha512sums=('dd557bae9c335491488279874b2a0082ff0a6c67fc0a8a2eb817426cdb2b9bcae80c8744c57f82458a2d742017a6b89204b608609b8dfe2aad7427a567aff6df'
            'cf83e1357eefb8bdf1542850d66d8007d620e4050b5715dc83f4a921d36ce9ce47d0d13c5d85f2b0ff8318d2877eec2f63b931bd47417a81a538327af927da3e'
            'cf83e1357eefb8bdf1542850d66d8007d620e4050b5715dc83f4a921d36ce9ce47d0d13c5d85f2b0ff8318d2877eec2f63b931bd47417a81a538327af927da3e'
            '235b55f244a05bc80a94c9c659a24dc9158b1e24e426b939ae0458919f8074213b49ff4b8d21e233804ff7d66bc2aa05557a11fb5db2cae300e8b7a020c967cd')

package() {
    local xx

    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname

    for xx in timer service ; do
        install -Dm644 $pkgname.$xx   $pkgdir/etc/systemd/system/$pkgname.$xx
    done
}
