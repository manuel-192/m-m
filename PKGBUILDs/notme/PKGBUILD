#!/bin/bash
# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=notme
pkgdesc="EndeavourOS news notification tool."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1
pkgrel=1
arch=('any')
license=('GPL')
depends=(
    bash
)

source=(
    "$url/$pkgname"
    "$url/$pkgname.timer"
    "$url/$pkgname.service"
    "$url/README.md"
)
sha512sums=('cc4502a04c03aff47b6e5879bf4be43a82e55f5987e609225e77ad2c85a9dbe8099f7805368826396412cbf2766e934ade1bac0799728954c6d3ba94b1449fae'
            'cf83e1357eefb8bdf1542850d66d8007d620e4050b5715dc83f4a921d36ce9ce47d0d13c5d85f2b0ff8318d2877eec2f63b931bd47417a81a538327af927da3e'
            'cf83e1357eefb8bdf1542850d66d8007d620e4050b5715dc83f4a921d36ce9ce47d0d13c5d85f2b0ff8318d2877eec2f63b931bd47417a81a538327af927da3e'
            'c5cb25b9b1a2a0d7432c4066d129d9f683d453dca41c4226628caf1b3c8d4e7b6bf9f1e7b5a3fadd98bc7e3d0f7e9bf2498d64a24ebdc91c3a15a250361783b0')

package() {
    local xx

    install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname

    for xx in timer service ; do
        install -Dm644 $pkgname.$xx   $pkgdir/etc/systemd/system/$pkgname.$xx
    done
}
