#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=meld-rcs
pkgdesc="Meld with RCS support and small UI changes"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=4

arch=('any')
license=('GPL')

source=(
    $url/meld-rcs
    $url/meld-rcs-helper
)
sha512sums=('84f5c667e2916fbce3175d2ae78e9f5386430daf2408f36059d1dfaa6d9f362991b342d432358d30ac90581bf8883dfe46264712d72c31898e2e75a10e3e8a6c'
            '0784f6c82724cc3cfb73a898f243b95225ea5fd1bae6f8e9dfa0d1177533a6e2eed6a0f61ff30422f146ebeb355ebb472b23ab5ecbc2aa56837c7f4236022a68')

package() {
    local xx
    for xx in meld-rcs{,-helper} ; do
        install -Dm755 $xx               $pkgdir/usr/bin/$xx
    done
}
