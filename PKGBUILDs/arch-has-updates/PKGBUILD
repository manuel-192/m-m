#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-has-updates
pkgdesc="Quick check if there are Arch updates."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.3
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('a56d9af12cdc3d17bd2fb3b94cd4b7d75ae0c0a804bed5939171c341f23c3f7a43e797f978f06303ee4300bfd7b3ebb1ba0df0d2ae4a0b9674025bf474c6993c')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
