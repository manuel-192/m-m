#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-has-updates
pkgdesc="Quick check if there are Arch updates."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.2.1
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('10f19761d2dad9d7079e2f75698a0ee1e6a0e70b23f315be2fc2eaf6212666fd29eeac85f390ebb716b610c33efaa0df7b046e2b108156a6f1477f1a1039fd80')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
