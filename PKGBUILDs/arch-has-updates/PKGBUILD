#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-has-updates
pkgdesc="Quick check if there are Arch updates."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.2
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('c6eaac5341d64d69c5dbac2fc334c0eb343026b1280a4e1914470ecb0a6736959d6994cb5d83ec4c059794f3c4b21d0567608d3c135e0fa435339b18190271a7')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
