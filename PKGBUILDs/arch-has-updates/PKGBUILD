#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-has-updates
pkgdesc="Quick check if there are Arch updates."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=('05b112dca59203cb653e70b2e56ddde388028737c4b9836fc494811916f88f535845f215445e10bd64b83dd2685ff87be0cc76782332f0e6398ab9448ffc17cb')

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
