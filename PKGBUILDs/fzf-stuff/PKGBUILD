#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=fzf-stuff
pkgdesc="fzf stuff"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=1.1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/fzf-pkg-description
    $url/mgr
)
sha512sums=('061b927bd3b9a39376e653dbd99d1913ae891c55cc1caccedc10137aef34a5f5f3cfb0dbef1aadfa82d27a54fe8d017537bb68e11b2b2e73ab99493d6284d4c6'
            '1879821770ff048bac3f7405a84c6d5dbfcf06fb7df16ae529482b184640ea218a0e1ae2fa70c8249a59adc6a283c0763f148e2ed6e54d84ad6446a39bcc451f')

package() {
    local src app
    for src in "${source[@]}" ; do
        app="${src##*/}"
        install -Dm755 $app               $pkgdir/usr/bin/$app
    done
}
