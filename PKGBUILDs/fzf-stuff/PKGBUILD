#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=fzf-stuff
pkgdesc="fzf stuff"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/fzf-pkg-description
    $url/mgr
)
sha512sums=('754bf4ca93703654336a140b835139897fe56239adf118e31a26882b9a7f475466341f7d887bfb5968cdcd348e42cd2b31aac65b3bce983a19bdebe4d2f5ab6d'
            '2102a485087b705e9c6bdf0e5c4d99a68d6a7a20e41957bf05af4a7409ed34583b048904892a784cdea86ed23b0fc02be36e806bfc5d203b4069bba1357e4e83')

package() {
    local src app
    for src in "${source[@]}" ; do
        app="${src##*/}"
        install -Dm755 $app               $pkgdir/usr/bin/$app
    done
}
