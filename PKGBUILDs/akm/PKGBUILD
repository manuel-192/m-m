#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=akm
pkgdesc="Arch kernel manager."
url="https://github.com/manuel-192/m-m/raw/master/Source/$pkgname"
pkgver=0.1.13
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash' 'yad' 'polkit' 'downgrade')
source=(
    "$url/$pkgname"
    "$url/$pkgname.desktop"
)
sha512sums=(
    e6531f915b9ef535a29941da2b68b16a92dd5962a2e7cc60dd639c1fbbae9f13357aff806c9fa8df15b405f143778cd31f65065244e16633e4814242aff8dbba
    1eb13fe6e3edefbd1022d108832a2b295f8939d684abdba674a45453c5fbb8752a5a82743009144f7136a1f5b3cdc788c195cf56c02a8e6b59d437cef4b6fb82
)

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
