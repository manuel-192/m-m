#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.21
pkgrel=3

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('f139d285e593ff72add7824a044b07f128256b1017efdfa061979337378b48143e45975e32f99af5ea8439bf8b2329afb2428587297012562b67ff5090e20a20')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
