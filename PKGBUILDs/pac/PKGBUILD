#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.19
pkgrel=2

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('25c60804e86516fbc553fc8e5b0c84639f72a2cac3eb5eaeb906e70c3c8a6558b134c592cc897ca37abb3fcba471faa1ab05c85d8edeeb69fd91dae491d87f5c')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
