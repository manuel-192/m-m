#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.09.01
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('985d7e43996a6e76320472e4715b866f56a74ac75703d1d0895c731b21398530f7cfef2c6fc9dca5f38ab90362d12b6c9d106701af47b331b77daefd8cc74eb4')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
