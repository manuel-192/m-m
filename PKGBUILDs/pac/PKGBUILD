#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Simple pacman wrapper, asks for elevated permissions only when needed."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.04
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')
backup=(etc/eos-pac.conf)

source=(
    $url/$pkgname
    $url/$pkgname.completion
    $url/eos-$pkgname.conf
    $url/TerminalUpdateCheck
)
sha512sums=('b87530f415abe3e5b9f901ce0cb0e43ff63adac3ea80e37e00c5ee35423f6b4cf236872ad89d62943f4ef1fa000dc064bd88dc39aaab7d25b0a0c47b1754201c'
            '1b3fd7f5779ada3c2f6f005f37fa538b5d0e91db5aebd6985e885d67ca73a0095102d910eb91d52de875d804d220a4985d4ded793b47042a10b518320d528fb9'
            'c1e80edc42e1f4d6fcc31d7b0d7ecf3ae122afdf7602c1105595c0191ebbdecab58955283cb60db3a4ed34318a26139cfcc843648df95b5be0affeef7ea89f4b'
            '1a2775cb7a522e21a29761ad5aaae4ac90628bc4a661033462476508fd2e842c553a72075d55b1ee0e21ad60b0825f5787f8e3283c54eb2647e44c33ca36b225')

package() {
  install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
  install -Dm755 TerminalUpdateCheck         $pkgdir/usr/bin/TerminalUpdateCheck
  install -Dm644 $pkgname.completion         $pkgdir/usr/share/bash-completion/completions/$pkgname
  install -Dm644 eos-$pkgname.conf           $pkgdir/etc/eos-$pkgname.conf
}
