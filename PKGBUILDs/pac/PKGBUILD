#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.21
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('b1ccc8cb4335b48b5b616cd9ab765f2b97426ee6a4141e827ae0de085f6e6cb828ae10d95c361003e163eb548b878c570871ddd339aafffae1fa51c9db9229d4')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
