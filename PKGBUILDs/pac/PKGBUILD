#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.19
pkgrel=2

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('6442806f822220eab0cff4325ec46cb5315e8977c86afc3ced3c1f65e290233b485a2af9a764a8fcc5c0e9a131a7cea50ea28c3dcbe42c7352b4457dcd90d00c')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
