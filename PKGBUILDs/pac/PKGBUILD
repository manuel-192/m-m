#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.19
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('0f4733304c895ddd89ff4f5b01abad65bce173634bed66c38448d93709234174b345cf20936c69140ad94247e9fb0986fb6cf1df445fa46997900a251bd5aece')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
