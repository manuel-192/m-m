#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.21
pkgrel=2

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('c90117b6b41a014ec27239f72f7113fdfea5134f0d0c2b4de97075578c8d22cbed9d933bf8a68ce6a69c358a4f030a7b9f5d67bc1b87053179ab87a623730fd5')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
