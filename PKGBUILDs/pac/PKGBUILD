#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.08.19
pkgrel=2

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
)
sha512sums=('a318a9eef7db0cefcf78b453c3e5a433eb414665e3bc06402a005c32576ff56ad89b5161bd967431d06403147b38c09ec0e0b1cd9908ee091e91fe565d3a3295')

package() {
    install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
}
