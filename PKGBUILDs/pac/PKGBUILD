#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pac
pkgdesc="Simple pacman wrapper, asks for elevated permissions only when needed."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2021.09.10
pkgrel=2

arch=('any')
license=('GPL')
depends=('bash')
backup=(etc/eos-pac.conf)

source=(
    $url/$pkgname
    $url/$pkgname.completion
    $url/eos-$pkgname.conf
)
sha512sums=('02cf70c92f6b68e473bded38a71c849f1297c091b199edad294ea821aaf7279c854a7e5a6d693ba5e5bb840aeb3bb494d98ffcaa39fe0ef94db12b87f2179ab8'
            'c70cae9b0f875934702950a1f46e5488d59c908a3fc5a72a394acf3c32e38a61416f2628c6f02a7b2ba799fef5ef047dc802e7c0050766c610b6a2033abb763b'
            'a62fc910cfc5f924493bfbb6a2376bbfc6cf650e2dad724738c0ce2657488e062a162edffcd43c3c2d8d259ef8af9481e128ca8270cc38030907c244dd125724')

package() {
  install -Dm755 $pkgname                    $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.completion         $pkgdir/usr/share/bash-completion/completions/$pkgname
  install -Dm644 eos-$pkgname.conf           $pkgdir/etc/eos-$pkgname.conf
}
