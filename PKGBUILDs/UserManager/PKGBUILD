#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=UserManager
pkgdesc="A simple graphical user manager for Arch based systems with Xfce."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.8.1
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash' 'yad')

source=(
    "$url/$pkgname"
    "$url/$pkgname.desktop"
)
sha512sums=('8f2e9b80fd65ff5c49ff9a425bd703f47619e582accff3de58c6670f74d86ab1527891c43efcf1f85a33a8ec7b1eff4d7e587038acc6e4772d9862bbbc09064e'
            'fd86129ae044f2e66b38394af7623b3d996589a7484d3f39e0c45acc5fec4d5ae2e5d12390a634d5e8167674530b69164aa2dcd9505c0d17fd0865a64f642bf4')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
