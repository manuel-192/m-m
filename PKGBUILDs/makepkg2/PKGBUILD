#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=makepkg2
pkgdesc="makepkg wrapper, adds option --url=*"
url="https://github.com/manuel-192/m-m/raw/master/Source/$pkgname"
pkgver=0.1.2
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash' 'pacman')

source=(
    "$url/$pkgname"
    "$url/$pkgname.completion"
)
sha512sums=(
    d9e65f43db8e53fa0fe2a4a223361c1672c68e3c7da9ec824c86454d015ad60bd3511b76705382529318fe33c74f2d9e0b2407ecacfa56d0d1805cab1f06ef89
    a684f12f0d6bbc2f5e0ef8538925f85ccd9ac74f7c056c802018e3700b800944a175d137004a65b95d84c3a03a453601736af6966a4e25b8fef8bd1593d219d7
)

package() {
  cd $srcdir
  install -Dm755 $pkgname            $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.completion $pkgdir/usr/share/bash-completion/completions/$pkgname
}
