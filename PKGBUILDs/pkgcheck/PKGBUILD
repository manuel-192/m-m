#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck
pkgdesc=""
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=4

arch=('any')
license=('GPL')
depends=(cd-path)

source=(
    $url/pkgcheck
    $url/pkgcheck.completion
)
sha512sums=('f67fe586f01afcfd891d33eafef20adc2a674f4e43249d4a6a2954b96b123ca7331c9c5a32c149ff67931b51b3287de33aa6eaea56bc1c657c6e34851a5a1008'
            'cc8400d63f49391a9c34f214e15b956f5d01c228358a1afc99174b8457886c0dc8f6e68e5ad986365dad1116c95629ac868852ddb7ff13aa14798f158f73f40f')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
