#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck
pkgdesc="Package build helper"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=24
pkgrel=2.7

arch=('any')
license=('GPL')
depends=()
backup=(etc/$pkgname.conf)

source=(
    $url/pkgcheck
    $url/pkgcheck.completion
    $url/pkgcheck.conf
    $url/pb
    $url/pb.completion
    $url/pull-requests
)
sha512sums=('ad83196577af554359e8547e5694de58efd7770de51509e227fef16ec56a3f2bafb148b4ec12453fdbda7c0f0bac57dfa83a5ab5376376c9adea99cb6e97a0d3'
            '2c269ab8d5f801f970adbbb63fbb1006e84feca04eac7469dad07c8a563d4d24c2371ab585c6803c2282d238d006c4bd410b46dc1567b75b86d54e7e421d876b'
            '088d71b0b10ca859af78fba163f5d3e5172a6632c678cec3bce72526a4fdcb7372fcb8628360bce70471bb6b58748842fcc353d37cc28021add7b86ad57191a4'
            'cd8a301411a89432dd3977f6318e06079f6542cc03d1045a43fb1ecc878f6d0b1905ed3df0a47a5b17754348ca8eb4dbc9024ef7181d38ac39ae8cfbeeacf19b'
            '3a058242b6511efddbc7cc37b88e59c0e2f44db95073f088d71e1c4d1b5a9f8526faf59f10b1f89a82acf2f3d051b4c71c47e2ba885fb67b0e4d01790229bd14'
            '9c1bdeb9281f9cf2cd126a3c204c66e3f6135f7744bb0eaec31fd8c0bec4d15f96835936514fa6a6a8cfbc37a73a8416322d631da7c55b0fc11b2799dbb2792f')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
