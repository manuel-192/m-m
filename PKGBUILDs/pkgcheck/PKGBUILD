#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck
pkgdesc="Package build helper"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=14

arch=('any')
license=('GPL')
depends=(cd-path)

source=(
    $url/pkgcheck
    $url/pkgcheck.completion
    $url/pkgcheck.conf
)
sha512sums=('d7ad74e10fe8573e063bcfec36f904e1e4a9b8193ed7dc4c24ea7914df8afbbec42b0b11450f3f6c97170c483a22c76dac3d32fb54451d1fb44d605ce37b42c1'
            'a7da2a7860984207f697ec70eda7544e4ee4bf276c4f018f6719733c26cb4f807fa670e74e55ab901ff25bdeaada350c17fd80d4cac53eef3c9467e677941810'
            'bee714109a42dce65e3e70067f548a731e93b146005c1cd6a2b4bb85aeec37fb53c999d6f40fdea2a2c99431e755c5acca33515b09e01309cecff17cd04cc1f0')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
