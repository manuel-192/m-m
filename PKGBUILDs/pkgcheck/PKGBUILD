#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck
pkgdesc="Package build helper"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=19.2

arch=('any')
license=('GPL')
depends=(cd-path)

source=(
    $url/pkgcheck
    $url/pkgcheck.completion
    $url/pkgcheck.conf
)
sha512sums=('6afefc115b180d8a9fa3dddbba9ce802453a6392a9dd03f53a068c52d7c8565cd1f4a4c22a28b54e9f5cf6a861a63c2c95bb15eb9bb15f1cf927997a55643d6d'
            'a7da2a7860984207f697ec70eda7544e4ee4bf276c4f018f6719733c26cb4f807fa670e74e55ab901ff25bdeaada350c17fd80d4cac53eef3c9467e677941810'
            'eb10af1e8e5eb99532ddf5c2cddfe33f111d6139af3016a69b548d68164f41b0d7c937a6393a8ab4cd418083b94edb1528c2bc990d0e2076524f676ad2aac556')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
