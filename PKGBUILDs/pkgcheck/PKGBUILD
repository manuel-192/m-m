#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck
pkgdesc=""
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=2

arch=('any')
license=('GPL')
depends=(cd-path)

source=(
    $url/pkgcheck
    $url/pkgcheck.completion
)
sha512sums=('67a733ad1ee1667fd93cf4977726632f9064a57fd1db7becfddeb5999f241d4f99231bfdef1ee025b0fdae591ae57d86ac934640937423b306baf3d389ebb667'
            'e119a973bf81e77c983e91d68afe6583b27cf0dce500e5bc93d0731041005e817f09834d55cacee75feeb8329fbfc1f4daeca1dfc312eca2f2a78e6846337afe')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
