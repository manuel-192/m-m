#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=power-routines
pkgdesc="Wrapper for some basic power management commands."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=1

arch=(any)
license=(GPL)
depends=(bash systemd)

source=(
    $url/$pkgname
)
sha512sums=('37a0ba3672efd8e97b26565d9a3959729a019e14f6b761d2a3a5107644c04be2f2091c06ff49dde44edb543de280709f3e249e152a6b6fb2f83c28da89621ee6')

package() {
    local src

    for src in "${source[@]}" ; do
        src="${src##*/}"
        case "$src" in
            *.completion) install -Dm644 "$src"  "$pkgdir/usr/share/bash-completion/completions/$(basename "$src" .completion)" ;;
            *)            install -Dm755 "$src"  "$pkgdir/usr/bin/$src" ;;
        esac
    done
}
