#!/bin/bash

pkgname=mirrorlist-m
pkgdesc="A mirror list for Manuel's packages at github."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=1
arch=(any)
license=(GPL)
source=(
    $pkgname
)
sha512sums=('6c4266fe9ac5fc2582976e1d686a9a551737b7a3c962d16601525e5f9e533d258fb9dbc18efc95645af3b5838877286a231a7379be1ecd0e8cf5ac12df5de08b')

backup=(etc/pacman.d/mirrorlist-m)

package() {
    install -Dm644 $pkgname    $pkgdir/etc/pacman.d/$pkgname
}
