#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=gitcl
pkgdesc="Customizable bash completion for 'git clone'"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25.9
pkgrel=1

arch=(any)
license=(GPL)
depends=(git)
backup=(etc/gitcl.conf)

source=(
    $url/gitcl
    $url/gitcl.bash-completion
    $url/gitcl.conf
)
sha512sums=('896166fc560dd74e33ccfbf25848794a1d5fbfb583ec051a6cb27316233c4da4a2bd13fac231ef0f5d3d14719ba54d8ef3e39cbae03013a0ad7d4c27663576fc'
            'f303773b7b179d23fe9b8bcfe95d5469eab9a2672800c374d8c74fe7faeacc56441f2235bb2d2130a46fb82e4b103661557530cd1609b8c1592cc880ed3f18f9'
            'cef85e0545f6f77a25ce42d219a610c62f5312a59c0846890f7df23c782a3fe4332c4d9c8cf83671801266ef3fb24bbdf9cc985a8c6ee76a3a3d3b9fd81233c1')

package() {
    local item
    for item in "${source[@]}" ; do
        item=${item##*/}
        case "$item" in
            *.conf)             install -Dm644 $item      $pkgdir/etc/$item ;;
            *.bash-completion)  install -Dm644 $item      $pkgdir/usr/share/bash-completion/completions/${item%.*} ;;
            *)                  install -Dm755 $item      $pkgdir/usr/local/bin/$item ;;
        esac
    done
}
