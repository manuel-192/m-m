#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=fetch-iso
pkgdesc="Fetch ISO"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=24
pkgrel=1.4

arch=('any')
license=('GPL')
depends=(fzf)
backup=(etc/$pkgname.conf)

source=(
    $url/$pkgname
    $url/$pkgname.completion
)
sha512sums=('8eb2eb976b21c8781773da08e48955b3d921aed88816ee5221efb1a4cda34e72f39d1dd2fb967a30c0e3eb5b29e228924103ee144246b2346f98e95b999d3759'
            'bbe87775fd414169f9138fd876126b0ac440769ee33544d6148a6bbdd520a37a41b2896eecce2cf607c13a53ac197deda0f65da1e2195da2f6f6b4f45d4d1f16')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
