pkgname=emacs-tweaks
pkgdesc="Simple help for starting emacs"
pkgver=1
pkgrel=3
arch=('any')
license=('GPL')
depends=(emacs)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/${pkgname}"

source=(
  $url/emacs
)
sha512sums=('8c1c34febbb9c7577f13239b387a318cb9ac3de4edb6da7e3c269cb182acd4757d93b5c823888d847e09c128a91205066adfef314bffa1adb51783d737029eb2')

package() {
  install -Dm755 emacs          $pkgdir/usr/local/bin/emacs
}
