pkgname=emacs-tweaks
pkgdesc="Simple help for starting emacs"
pkgver=1
pkgrel=4
arch=('any')
license=('GPL')
depends=(emacs)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/${pkgname}"

source=(
  $url/emacs
)
sha512sums=('02fe319e25551d9c4b937c602177c44275fb08747c810917f239062b81438331730e1e366f7139c7918a32f6531792240b38312b9458ab7712dd50ea7d32ef83')

package() {
  install -Dm755 emacs          $pkgdir/usr/local/bin/emacs
}
