#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck-gui
pkgdesc="Package build helper GUI"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=5

arch=('any')
license=('GPL')
depends=(pkgcheck pacman-ext)
backup=(etc/pkgcheck-gui.conf)

source=(
    $url/pkgcheck-gui
    $url/pkgcheck-gui.conf
)
sha512sums=('42030487b08c8bff19ffe2f1a1ef1139290ffa66bb31e7112f233959cee302044dac7b25b707f292b745a850fa3b1fc0a77fac5cfb59adecede037dd9609c49f'
            '390fc5afe4699cf2931cf1db814f29003c3ae567a5e9535ac54bf4646789befc2c20a4e7de3b2d7073dd3ab8756201322e9dc2d946afd4d06d7520408121b67a')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
