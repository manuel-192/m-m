#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgcheck-gui
pkgdesc="Package build helper GUI"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=1

arch=('any')
license=('GPL')
depends=(pkgcheck)

source=(
    $url/pkgcheck-gui
    $url/pkgcheck-gui.conf
)
sha512sums=('ffb58f4c5ddcdb5adadaa10ccdd5938e2c04593c013205ef94c76288d81f0ecd555768651758d2570b46fb85e461e6d37249aa012ebef1df643851a313b0173b'
            '09a9a1d8bacda7576dc4342176481083bae0a00425e3cadee4291d5e86f66eec01fcd44664727824538fb27e9ed17a01e62a4f731d62bdb1cb147d192ffe6388')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=$(basename "$xx")
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
