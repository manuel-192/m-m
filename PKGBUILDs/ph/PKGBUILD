#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=ph
pkgdesc="Show pacman history."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=4

arch=('any')
license=('GPL')
depends=('bash' 'pacman')

source=(
    "$url/$pkgname"
    "$url/$pkgname.completion"
)
sha512sums=('a5354444489bb5a1e566564b199a8a56eae9936d9675b762aa93c1a51a03d96afb9a48ca8772c7b61f85611c2965da6a6cfb248f87fb4bbef093ffd4c0ceb5a8'
            '79bd62fe8596f21a466eb6012c1f2e991c545ac94387e10b17fca42ce4135e6d37efac355ec235fb2b3fa6e80be94f5982febe90340501982f3297fb8a29b1f1')

package() {
  cd $srcdir
  install -Dm755 $pkgname             $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.completion  $pkgdir/usr/share/bash-completion/completions/$pkgname
}
