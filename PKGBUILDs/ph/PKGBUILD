#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=ph
pkgdesc="Show pacman history."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=0.1
pkgrel=2

arch=('any')
license=('GPL')
depends=('bash' 'pacman')

source=(
    "$url/$pkgname"
)
sha512sums=('061a69dfc29ee6f76447b4a3798ea87553bd97a823fbbb7d67f61396164d04a6f6574de42c8855b31472c31bf3c17e21c9ecc5bfe0d19f35578a95868680c17a')

package() {
  cd $srcdir
  install -Dm755 $pkgname  $pkgdir/usr/bin/$pkgname
}
