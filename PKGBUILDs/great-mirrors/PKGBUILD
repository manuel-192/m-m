#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=great-mirrors
pkgdesc="Choose great upstream mirrors into /etc/pacman.d/mirrorlist"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.2.2
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url"/$pkgname
    "$url"/mirror-countries.conf
)
sha512sums=('3ba98ce6d3f6089305965063afdfac36d23f212ac11584e073a61e976754d170b662344a1b4083eb2c74e6f4c5b52630fc9ea98b072215fba5090e44d1d52ad6'
            'c4962b47fb5b3d9077a5d6218853cdc13a18be9025045e009af761695ce5e9371e1b4bdd633df09bc4fc85954122b1ae4faaa450d11ecaa7a1e2f8f6a019409e')

package() {
  install -Dm755 $pkgname               $pkgdir/usr/bin/$pkgname
  install -Dm644 mirror-countries.conf  $pkgdir/etc/mirror-countries.conf
}
