#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=great-mirrors
pkgdesc="Choose great upstream mirrors into /etc/pacman.d/mirrorlist"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1
pkgrel=1.1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url/$pkgname"
)
sha512sums=('7889a8ed7065d00f8345908ef8660926cf60cab35cabc6f782dfd954a45a60552fee5fad45338fead87ffdda955d97bf31b61121d46691afae0fb5bbb2b2c1e3')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
