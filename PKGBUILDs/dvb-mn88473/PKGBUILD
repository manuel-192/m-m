#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=dvb-mn88473
pkgdesc="Latest DVB mn88473 firmware."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
arch=('any')
license=('GPL')
depends=(bash p7zip)
source=(
    dvb-demod-mn88473-01.fw
    $pkgname
)
sha512sums=('d7d71e06ad818031280ca481d2cfbaa31edec6f2f9ac378a314de3b3627ad0e633ac19edf8da5dc34a21dceeaa58c58280c5e213d699a408098f8f2107c693db'
            '0321316975446782e50c4025f79115b7d9b46247a4691b323b50769860c124766e5c482a11ff733fbf78adbb2e01c97b767e3784896d9f01b3283af8c2057574')

pkgver=1.1
pkgrel=1

package() {
    local file=${source[0]}

    ./$pkgname $file
    install -Dm644 $file   $pkgdir/usr/lib/firmware/$file
}
