    $url/app
    $url/app.completion
    $url/curl
    $url/echo2
    $url/eos-open
    $url/ide
    $url/ncdu
    $url/rate-mirrors-arch
    $url/paccache-maintainer
    $url/pkgfind
    $url/Power-routines
    $url/printf2
#    $url/update-grub
)
