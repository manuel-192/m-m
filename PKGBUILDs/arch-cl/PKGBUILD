#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-cl
pkgdesc="Arch packages changelog."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=2
arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/arch-changelog
    $url/arch-changelog.conf
)
sha512sums=('451b8f059c510b800100a268965d88d33970a445bea6cfe31a6974688695000e8cef26cdecfbe15131beaba91f6ac40c648f45fe57d8c060c7073b780e94234c'
            '74486a11653350f302905cc2a80b38220489b324905d72ae48c50d39fe2fcfdb5aaef934259160404724dc306c4b650e122479d088292bf48fac5a06fe6dffea')

package() {
    local src file
    for src in "${source[@]}" ; do
        file=${src##*/}
        case "$file" in
            *.conf) install -Dm644 $file    "$pkgdir"/etc/$file ;;
            *)      install -Dm755 $file    "$pkgdir"/usr/bin/$file ;;
        esac
    done
}
