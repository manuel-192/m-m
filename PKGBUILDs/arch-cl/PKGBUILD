#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=arch-cl
pkgdesc="Arch packages changelog."
url="https://github.com/manuel-192/m-m/raw/master/Source/$pkgname"
pkgver=0.1.6
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash')

source=(
    "$url/$pkgname"
)
sha512sums=(
    ae82596de0b72d27782133046fa8388d4667ed5f7e42a588309638b1ddcd13c4b32f23f1bddd9a0dd888b2054c6f4a9f80c31cbe94f8ef028a5243b2063c2802
)

package() {
  cd $srcdir
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
