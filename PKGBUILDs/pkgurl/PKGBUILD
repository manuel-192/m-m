#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgurl
pkgdesc="Show the URL or AUR URL of the package"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25.2
pkgrel=1

arch=('any')
license=('GPL')

source=(
    $url/$pkgname
)
sha512sums=('66003bf88a6f2333ca18b426784a441a8efd21469f78eb65658223013da4bdda95996d52ba63759ed347a96c618182b2540dde703851c34843a254973443ea32')

package() {
    local file
    for file in "${source[@]}" ; do
        file=${file##*/}
        install -Dm755 "$file"   "$pkgdir/usr/bin/$file"
    done
}
