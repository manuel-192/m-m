#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgurl
pkgdesc="Show the URL or AUR URL of the package"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25
pkgrel=1

arch=('any')
license=('GPL')

source=(
    $url/$pkgname
)
sha512sums=('2f6a69db3cb8551e07e79bba7bdaf8c77a4c4168f1b5140a92f3ea990104c200872403cb84c169c5ca287bd5b312179a29711a0fbf04b3e47f251d2187f4236c')

package() {
    local file
    for file in "${source[@]}" ; do
        file=${file##*/}
        install -Dm755 "$file"   "$pkgdir/usr/bin/$file"
    done
}
