#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgurl
pkgdesc="Show the URL or AUR URL of the package"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25.11
pkgrel=1

arch=('any')
license=('GPL')

source=(
    $url/$pkgname
)
sha512sums=('7b8c1383cc9e6d2fd584150a4edf472bab3c11570709ad140d823adb76178a2ede350decd29e178b1eefe85ac8addd7abb85f3490d11864dac535af8dcebc2a2')

package() {
    local file
    for file in "${source[@]}" ; do
        file=${file##*/}
        install -Dm755 "$file"   "$pkgdir/usr/bin/$file"
    done
}
