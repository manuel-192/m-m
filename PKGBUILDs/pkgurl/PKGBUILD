#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pkgurl
pkgdesc="Show the URL or AUR URL of the package"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25.1
pkgrel=1

arch=('any')
license=('GPL')

source=(
    $url/$pkgname
)
sha512sums=('a0ef8ab66afb5cea5486297d32aacabe6c8757ee0e042e89455ee2011a14813f0865256f1d3b25a8514669ceae4d5e336241426037d98c534c7c200069792a23')

package() {
    local file
    for file in "${source[@]}" ; do
        file=${file##*/}
        install -Dm755 "$file"   "$pkgdir/usr/bin/$file"
    done
}
