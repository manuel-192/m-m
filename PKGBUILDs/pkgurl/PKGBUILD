#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pf
pkgdesc="Show the contents of a specified field in 'yay -Sii <pkgname>'"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=25.12.1
pkgrel=1

arch=('any')
license=('GPL')

source=(
    $url/$pkgname
    $url/$pkgname.completion
)
sha512sums=('01b372481f8af8136c22fde14456d8e90ee8743a848c5927de1b68ed7dd616caac1a0590d7766ea39eba9d856b8790a9cf6fee7fcd23302a8159f8b037cf93c0'
            'feef4f021ab52bfbe472d39e4dd6853edda81afb5c6a03c4dbbab9f76b5a01ba3fed4580d610e1c778e1fb9f25ed93891fb437d3848b2adc383f1c5e0984a25b')

package() {
    local file
    for file in "${source[@]}" ; do
        file=${file##*/}
        case "$file" in
            *.completion) install -Dm644 "$file"   "$pkgdir/usr/share/bash-completion/completions/${file%.completion}" ;;
            *)            install -Dm755 "$file"   "$pkgdir/usr/bin/$file" ;;
        esac
    done
}
