#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=bide
pkgdesc="Bash language IDE"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=23
pkgrel=1.1

arch=('any')
license=('GPL')
depends=(
    bashdb
    vscodium   # (or an alternative)
)
optdepends=(
    'bash-language-server: required by the "bash-ide" extension'
    'shellcheck: for linting'
)
source=(
    $url/$pkgname
)
sha512sums=('062a29b1d764e3cd668e798cc30a8037b3fc609372d04a88dc6ce0ab4b488db3826c214a9188ef140c8272be82bbd716dc9ec3f48b8a3baf57c88e2720a41f66')

package() {
    local item
    for item in "${source[@]}" ; do
        item=${item##*/}
        case "$item" in
            *.bash-completion) install -Dm644 $item      $pkgdir/usr/share/bash-completion/completions/${item%.completion} ;;
            *)                 install -Dm755 $item      $pkgdir/usr/bin/$item ;;
        esac
    done
}
