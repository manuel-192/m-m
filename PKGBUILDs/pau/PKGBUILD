#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pau
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=22.9.7  # next pkgver: 22.10 or similar!
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')
optdepends=(
    'eos-bash-shared: nvidia vs. kernel update check'
)
conflicts=(pac)

source=(
    $url/$pkgname
    $url/pac.completion
    $url/pac
    $url/Pacman
    $url/pu
)
sha512sums=('ef3122cbcaceb8c1ce3c0a9ec9023bc90b70b2729de1f673bd8f3a4ce1bd867dfb294a34aca8ff9acee189c58624f02d704594f47b81b4952d952fce314978ce'
            '1b3fd7f5779ada3c2f6f005f37fa538b5d0e91db5aebd6985e885d67ca73a0095102d910eb91d52de875d804d220a4985d4ded793b47042a10b518320d528fb9'
            '79ac69479ed20fc969f2a3433bb8b149765a56c596cd942b05f36a5ef6fd5af6cb4c36c72de3a3065a6d4cbf7d93a72288a05f6394e1c86f82415af2cf5062bb'
            '6fac42fadcf3fbc4cc7f82397bb4782ad8babb4f8b942efe16e7d4bdeb6bff99e528778b9f238eb0b3d2c7ca5c20657806afbbc1c124ab734b722fbbd93071a3'
            '60c2cdb85a24d64480fb971e1269fb4e4cff57daed22219dcbdd496c127b839329fcc59651968ae0622568e6d349501974ae0831a62ec842ddd214e1a03b3088')

package() {
    install -Dm644 pac.completion         $pkgdir/usr/share/bash-completion/completions/pac
    install -Dm755 $pkgname               $pkgdir/usr/bin/$pkgname
    install -Dm755 Pacman                 $pkgdir/usr/bin/Pacman
    install -Dm755 pac                    $pkgdir/usr/bin/pac
    install -Dm755 pu                     $pkgdir/usr/bin/pu
}
