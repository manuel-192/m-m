#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pau
pkgdesc="Package updater, with certain useful extra features."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=2022.09.12
pkgrel=1

arch=('any')
license=('GPL')
depends=('bash')

source=(
    $url/$pkgname
    $url/$pkgname.completion
    $url/pac
    $url/Pacman
)
sha512sums=('a563ce8b15d80810778207bbb5c4ec8441974f4f0936fcb62bf4345778c808f9d9bc856ab7ff3f9d6701d90bd35149f93519d01c9fdbbb927b068f6391293505'
            '1b3fd7f5779ada3c2f6f005f37fa538b5d0e91db5aebd6985e885d67ca73a0095102d910eb91d52de875d804d220a4985d4ded793b47042a10b518320d528fb9'
            '2b038567b82636eeceb90b50d21306faf2ece57737c48adacc53887967b47c8d664245a4871bc7b6435c9dcee1065b926879fb01e8ae87a7191c857dbf3c5f2c'
            '98bb69bdaa9ac1db1c6199d1fe0d7c0eadfc5f1627f736a1044ba1cc2cc7db2e38eecbad396286d7f32957f818d2a72d9da16df136ca8cd4522d6ab9ca2f7bbc')

package() {
    install -Dm644 $pkgname.completion    $pkgdir/usr/share/bash-completion/completions/$pkgname
    install -Dm755 $pkgname               $pkgdir/usr/bin/$pkgname
    install -Dm755 Pacman                 $pkgdir/usr/bin/Pacman
    install -Dm755 pac                    $pkgdir/usr/bin/pac
}
