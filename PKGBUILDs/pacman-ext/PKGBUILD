    $url/pac.completion
    $url/paf                       # TUI
    $url/mirror-swap-eos
    $url/pm-gui
    $url/Build
    $url/uc-fast
    $url/uc-fast.conf
    $url/inst
    $url/upd
    $url/upd-small
    $url/upd.completion
    $url/eos-pacmerge
    $url/update-system
    $url/expac-aur
    $url/expac-aur.completion
    $url/fit
    $url/hook-update-description
    $url/local-update-checker   # don't installed
)
