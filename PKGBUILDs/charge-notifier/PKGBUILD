#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=charge-notifier
pkgdesc="Notify when battery is low or high"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=24
pkgrel=3

arch=('any')
license=('GPL')
depends=()
backup=()

source=(
    $url/battnot
)
sha512sums=('c3949e3f46e51d0b2aa8ca91a32610c861a9c7069155819defb35064052445386dc434f16ed14d0a8e1d59a61fdca5d2317c10e40bcf0a82c7b71363e126642b')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=${xx##*/}
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
