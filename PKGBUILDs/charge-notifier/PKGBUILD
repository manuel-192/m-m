#!/bin/bash

# Maintainer: manuel (see forum.endeavouros.com)

pkgname=charge-notifier
pkgdesc="Notify when battery is low or high"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=24
pkgrel=5

arch=('any')
license=('GPL')
depends=()
backup=()

source=(
    $url/battnot
    $url/battnot.completion
)
sha512sums=('df7ece222fd52b93f76455625ed705afa608f3cd860e9c965c3c48229b63d189f6a57c2c517b19a80ff67077ba694cf3ef16489980b64c322bbfa41441ccb5b2'
            '59cdaacf13783df92fda588a2331d2ee9799a0955caec9f5ef1e1ed858ce1a8e5d88c2aa763647672ca75843ce207d09a9c7cc1262cb926b8971f28ea2db4516')

package() {
    local xx name
    for xx in "${source[@]}" ; do
        name=${xx##*/}
        case "$name" in
            *.completion) install -Dm644 $name   $pkgdir/usr/share/bash-completion/completions/${name%.*} ;;
            *.conf)       install -Dm644 $name   $pkgdir/etc/$name ;;
            *)            install -Dm755 $name   $pkgdir/usr/bin/$name ;;
        esac
    done
}
