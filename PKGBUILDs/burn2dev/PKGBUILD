#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=burn2dev
pkgdesc="CLI burning ISO to USB stick with dd."
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    $pkgname
    find-usb-sticks
)
sha512sums=('f984828bbe6b94846f60d26aac3f44c8c2cd8975000c889626e0c94e38939f23b1010170b0aa3fa2a5d0d680830f36f09080e9a183e966cd72b22a84cadc76db'
            'bbd7d2a7322ade84eab95c16b43614b86b370ace793d0e7a6eb161def15f20de19605d23658b1b30733f7fab210852abc3f90a7f87a507ffcf4e6242961e8d09')

package() {
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm755 find-usb-sticks  $pkgdir/usr/bin/find-usb-sticks
}
