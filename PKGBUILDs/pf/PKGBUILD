#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pf
pkgdesc="Package finder"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.4
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yay)

source=(
    "$url/$pkgname"
)
sha512sums=('ef6cb7a218e04edb11067235dd0a2366a9f78401f43b4f9f2a5ae725054fdbc4ff86da3b85738520b9dea34f794e3f2ddf931ac8c04c032d68c16f2b2982d327')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
