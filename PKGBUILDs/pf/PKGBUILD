#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pf
pkgdesc="Package finder"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url/$pkgname"
)
sha512sums=('6cf4da138eb233410b4d7c4302264275d4d2d3a217c4a7f1d862a66e15ee12aa7d3b4d33a4986543a7b764307dd367e42cfd0c27d4ed61cf720679fbbf36cef7')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
