#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pf
pkgdesc="Package finder"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.2
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash)

source=(
    "$url/$pkgname"
)
sha512sums=('59a3bac1a928cf1de625b1963a4a839f065e58449eeb0f20aa59f7750e6a11456dd851b22d1b08724825a7ebba0744bd93f166d7765dfd5aab819e8aac4d1886')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
