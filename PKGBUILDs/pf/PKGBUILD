#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=pf
pkgdesc="Package finder"
url="https://github.com/manuel-192/m-m/raw/master/PKGBUILDs/$pkgname"
pkgver=1.3
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yay)

source=(
    "$url/$pkgname"
)
sha512sums=('a62ef352cbaff2a7601ede98e81f5756b353975509f5650c87d22969f0bad261cef9d9d05cf99392fab8a037114f0225363e7f8595eee240f12dba68dd1416d3')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
}
